<h2>Create a movie</h2>

<form action="/movies/create" method="post">
  <label>
    Name:
    <input type="text" name="name" />
  </label>

  <label>
    Genre:
    <input type="text" name="genre" />
  </label>

  <label>
    Plot
    <input type="text" name="plot" />
  </label>

  <label>
    Cast
    <input type="checkbox" name="plot" />
  </label>
  <button type="submit"> Create </button>
</form>